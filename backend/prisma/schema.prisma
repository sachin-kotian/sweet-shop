datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  username  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Sweet {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  category    String
  quantity    Int
  imageUrl    String   @default("/images/default.jpg")
  createdAt   DateTime @default(now())
}
